{
  "include": ["src/**/*.ts", "test/**/*.ts", "vitest.config.ts"],
  "exclude": [".git", "node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
